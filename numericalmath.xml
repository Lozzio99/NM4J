  <property name="project.jdk.classpath" value="jdk.classpath.15"/>
  
  <!-- Modules -->
  
  
  <!-- Module NM4J -->
  
  <dirname property="module.nm4j.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.nm4j" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.nm4j" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.nm4j" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.nm4j" value="-encoding UTF-8 -source 15 -target 15 ${compiler.args}"/>
  
  <property name="nm4j.output.dir" value="${module.nm4j.basedir}/out/production/NM4J"/>
  <property name="nm4j.testoutput.dir" value="${module.nm4j.basedir}/out/test/NM4J"/>
  
  <path id="nm4j.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="nm4j.module.production.classpath">
    <path refid="${module.jdk.classpath.nm4j}"/>
  </path>
  
  <path id="nm4j.runtime.production.module.classpath">
    <pathelement location="${nm4j.output.dir}"/>
  </path>
  
  <path id="nm4j.module.classpath">
    <path refid="${module.jdk.classpath.nm4j}"/>
    <pathelement location="${nm4j.output.dir}"/>
  </path>
  
  <path id="nm4j.runtime.module.classpath">
    <pathelement location="${nm4j.testoutput.dir}"/>
    <pathelement location="${nm4j.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.nm4j">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.nm4j">
    <patternset refid="excluded.from.module.nm4j"/>
  </patternset>
  
  <path id="nm4j.module.sourcepath">
    <dirset dir="${module.nm4j.basedir}">
      <include name="src"/>
      <include name=".github"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.nm4j" depends="compile.module.nm4j.production,compile.module.nm4j.tests" description="Compile module NM4J"/>
  
  <target name="compile.module.nm4j.production" description="Compile module NM4J; production classes">
    <mkdir dir="${nm4j.output.dir}"/>
    <javac destdir="${nm4j.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.nm4j}/javac">
      <compilerarg line="${compiler.args.nm4j}"/>
      <bootclasspath refid="nm4j.module.bootclasspath"/>
      <classpath refid="nm4j.module.production.classpath"/>
      <src refid="nm4j.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.nm4j"/>
    </javac>
    
    <copy todir="${nm4j.output.dir}">
      <fileset dir="${module.nm4j.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.nm4j.basedir}/.github">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.nm4j.tests" depends="compile.module.nm4j.production" description="compile module NM4J; test classes" unless="skip.tests"/>
  
  <target name="clean.module.nm4j" description="cleanup module">
    <delete dir="${nm4j.output.dir}"/>
    <delete dir="${nm4j.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.nm4j" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.nm4j" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>